<p id="notice"><%= notice %></p>

<h1>Cotizmesexps</h1>

<%= form_for "", url: cotizmesexps_path, role: "Search", method: :get do %>
  <%= text_field_tag :correo, @correoelectronico, placeholder: "Indica tu dirección de correo electrónico" %>
  <%= submit_tag "Consultar Cotizaciones" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Número de puestos</th>
      <th>Material</th>
      <th>Color</th>
      <th>Correo</th>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cotizmesexps.each do |cotizmesexp| %>
      <tr>
        <td><%= cotizmesexp.numeropuestos %></td>
        <td><%= cotizmesexp.material %></td>
        <td><%= cotizmesexp.color %></td>
        <td><%= cotizmesexp.correo %></td>
        <td><%= cotizmesexp.nombre %></td>
        <td><%= cotizmesexp.cantidad %></td>
        <td><%= link_to 'Show', cotizmesexp %></td>
        <td><%= link_to 'Edit', edit_cotizmesexp_path(cotizmesexp) %></td>
        <td><%= link_to 'Destroy', cotizmesexp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

